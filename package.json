{
  "name": "package-sync",
  "author": "Lee Dohm <lee@lee-dohm.com>",
  "main": "./lib/main",
  "version": "1.1.0",
  "description": "Synchronizes packages installed between computers",
  "keywords": [
    "package",
    "installation",
    "synchronization"
  ],
  "repository": "https://github.com/lee-dohm/package-sync",
  "license": "MIT",
  "engines": {
    "atom": ">=1.8.0 <2.0.0"
  },
  "dependencies": {
    "etch": "^0.6.0",
    "season": "^5.2.0"
  },
  "devDependencies": {
    "atom-mocha-test-runner": "0.2.1",
    "chai": "^3.5.0"
  },
  "atomTestRunner": "./spec/runner.js",
  "configSchema": {
    "createOnChange": {
      "title": "Create on change",
      "description": "Create package list when packages are created or removed.",
      "type": "boolean",
      "default": false
    },
    "forceOverwrite": {
      "title": "Overwrite `packages.cson`",
      "description": "Overwrite `packages.cson` even when it is present.",
      "type": "boolean",
      "default": false
    }
  }
}
